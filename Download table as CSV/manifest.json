{
	"name": "Download table as CSV",
	"description": "Download HTML tables in MS Excel style CSV format.",
	"version": "2",
	"manifest_version": 3,
	"permissions": [
		"contextMenus",
		"activeTab",
		"scripting",
		"storage"
	],
	"host_permissions": ["<all_urls>"],
	"background": {
    		"service_worker": "service_worker.js",
    		"type": "module"
	},
	"action": {
		"default_popup": "popup.html"
	},
	"icons": {
		"32": "icons/32x32.png",
		"64": "icons/64x64.png",
		"128": "icons/128x128.png"
	}
}
